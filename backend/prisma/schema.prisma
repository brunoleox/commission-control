generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Clients {
  id         String   @id @default(uuid())
  created_at DateTime @default(now())
  name       String
  cnpj_cpf   String   @unique
  email      String?
  phone      String?
  address    String?
  number     String?
  district   String?
  city       String?
  state      String?
  cep        Int?
  order      Orders[]

  @@map("client")
}

model Products {
  id         String   @id @unique @default(uuid())
  created_at DateTime @default(now())
  name       String
  value      Float
  order      Orders[]

  @@map("product")
}

model Orders {
  id         String    @id @unique @default(uuid())
  created_at DateTime  @default(now())
  client     Clients?  @relation(fields: [clientId], references: [id])
  clientId   String?
  Product    Products? @relation(fields: [productId], references: [id])
  productId  String?

  @@map("order")
}
